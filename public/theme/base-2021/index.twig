{% extends 'partials/_master.twig' %}

{% block main %}

	{% setcontent block = 'homepage' %}


	<div class="pt-12">
		<div	class="container px-3 mx-auto flex flex-col md:flex-row items-center justify-items-center gap-10">
			<!--Left Col-->

			<div class="flex flex-col w-full md:w-1/2 justify-center items-start text-center md:text-left">
				<h1 class="my-4 text-5xl font-bold leading-tight ">{{ block|title }}</h1>
				<p class="leading-normal text-2xl mb-8 ">{{ block.content }}</p>
				<a href="entries" class="mx-auto lg:mx-0 hover:underline bg-white text-gray-800 font-bold rounded-full my-6 py-4 px-8 shadow-lg">
					{{ __('Nejnovější články') }}
				</a>
			</div>

			<!--Right Col-->
			<div class="py-12 mx-auto">
				<img class="mx-auto" src="{{ block|thumbnail(500, 500, fit="contain") }}">
			</div>
		</div>
	</div>
{% endblock main %}
