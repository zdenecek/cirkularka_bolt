{% extends 'partials/_master.twig' %}

{% block main %}

	<!--Container-->

	<section class="bg-gray-100 w-full">

		<div class="container pt-16 pb-16 w-full mx-auto">

			<div class="p-4 pb-20 w-full flex flex-col items-center gap-2">
				<h1 class="text-center text-3xl lg:text-5xl font-semibold leading-tight flex">
					{{ record|title }}
					{% if record|edit_link %}
						<a href="{{ record|edit_link }}" class="p-1">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
							</svg>
						</a>
					{% endif %}
				</h1>


				<div class="flex justify-center">
					{% include 'partials/_record_header_author.twig' %}
				</div>
			</div>

			<div class="w-full px-4 text-grey-darkest leading-normal">


				<article class="article pb-16">
					{{ record.body }}
				</article>


			</div>
		</div>

	</section>
	<!--/container-->

{% endblock main %}
